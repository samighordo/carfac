<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="carfacApplicatie.search_klant">
    <ContentPage.Content>
        <StackLayout>

            <SearchBar x:Name="klantbar" Placeholder="Klantnummer" BackgroundColor="white" Margin="20" Keyboard="Numeric"></SearchBar>

            <Button
                Text="zoek"
                Clicked="zoek_clicked"
                Margin="50,20,50,20"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="1.5"
                CornerRadius="10"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>