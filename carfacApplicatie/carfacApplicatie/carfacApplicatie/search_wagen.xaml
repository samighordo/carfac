<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="carfacApplicatie.search_wagen"
             BackgroundImageSource="achtergrond4">
    <ContentPage.Content>
        <StackLayout>

            <FlexLayout>

                <SearchBar x:Name="autobar" Placeholder="wagennummer" BackgroundColor="white" Margin="20,20,10,20" Keyboard="Numeric"></SearchBar>

                <Image Source="dropdown2.png" WidthRequest="80" Margin="0,0,10,0">

                    <Image.GestureRecognizers>

                        <TapGestureRecognizer Tapped="toon_popup"></TapGestureRecognizer>

                    </Image.GestureRecognizers>

                </Image>

            </FlexLayout>

            <Button
                Text="zoek"
                Clicked="zoek_clicked"
                Margin="50,20,50,20"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="1.5"
                CornerRadius="10"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>