<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="carfacApplicatie.lijst"
             BackgroundImageSource="achtergrond4">
    <ContentPage.Content>
        <StackLayout>

            <Picker x:Name="pickerLijst" Title ="sorteer" HorizontalTextAlignment="End" Margin="312,0,10,0" TextColor="Black">
                <Picker.Items>
                    <x:String>alfabetisch</x:String>
                    <x:String>numeriek</x:String>
                </Picker.Items>
            </Picker>

            <ListView
                x:Name="resultaatLijst" ItemTapped="item_clicked">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding naam}"
                                  Detail="{Binding nummer}"
                                  ></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>