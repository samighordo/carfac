<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="carfacApplicatie.search_artikel">
    <ContentPage.Content>
        <StackLayout>

            <Frame BorderColor="Black" HorizontalOptions="Center" HeightRequest="25" Margin="10" HasShadow="True">
                <SearchBar x:Name="artikelbar" Placeholder="beschrijving"></SearchBar>
            </Frame>

            <Button
                Text="zoek"
                Clicked="zoek_clicked"
                Margin="50,20,50,20"
                BackgroundColor="White"
                BorderColor="Black"
                BorderWidth="1.5"
                CornerRadius="10"></Button>

            <ActivityIndicator x:Name="indicator" Margin="0,100,0,0" VerticalOptions="Center" HorizontalOptions="Center" IsRunning="True" IsVisible="false"></ActivityIndicator>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>